<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{
    title : "Resultado de la búsqueda"
}) %>

  <body class="home">
    <!-- encabezado -->
    <%- include('../partials/header') %>

      <!-- principal -->
      <main class="home__main">
     
        <!-- productos -->
        <section class="home__main__section--productos">
          <% courses.forEach(({title,price,description,chef,images,id,free,discount}) => { %>
            <%- include('../partials/courseArticle',{
              title,
              images,
              id,
              sticker: free ?  "img-gratis.png" : discount !== 0 ? "img-descuento.png"  : null
            }) %> 
          <% }) %>
         
         
        </section>
           <!-- botón de whatsapp -->

        <%- include('../partials/whatsApp') %>

      </main>
      <!-- pie de pagina -->

      <%- include('../partials/footer') %>


        <%- include('../partials/scripts') %>

          <script src="/javascripts/home.js"></script>

  </body>

</html>