<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head',{
    title: "Agregar Curso"
}) %>

  <body class="form">
    <!-- encabezado -->
    <%- include('../partials/header') %>

      <!-- principal -->
      <main class="form__main">
     
     <h2>Detalle del Curso</h2>
     <hr>
     <div class="row">
        <div class="col-12 col-md-10 mx-auto">
            <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <div class="d-flex flex-column gap-1">
                      <img src="/images/courses/<%= images.length ? images[0] : 'not-image.png' %>" height="300px" class=" rounded-start" alt="..." id="imgMain" style="object-fit:cover;">
                      <div class="d-flex flex-row justify-content-between  flex-wrap gap-1">
                        <% images.forEach(image => { %>
                          <img width="32%" src="/images/courses/<%= image ? image : 'not-image.png' %>" class="img-fluid" alt="..." style="object-fit: cover;" onclick="document.getElementById('imgMain').setAttribute('src',this.src)">

                        <% }) %>
                       
                      </div>
                    </div>
                    
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= title %></h5>
                      <p class="card-text"><%= description %></p>
                      <div class="d-flex gap-2">
                        <a class="btn btn-success" href="/courses/edit/<%= id %>">Editar</a>
                        <a class="btn btn-danger" href="/courses/remove/<%= id %>">Eliminar</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
        </div>

     </div>

      </main>
      <!-- pie de pagina -->

      <%- include('../partials/footer') %>


        <%- include('../partials/scripts') %>


  </body>

</html>